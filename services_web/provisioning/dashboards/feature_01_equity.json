{
  "title": "Feature 01 - Equity",
  "uid": "feature-01-equity",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5s",
  "tags": ["feature", "equity", "prometheus"],
  "editable": true,
  "panels": [
    {
      "type": "stat",
      "title": "Redis Connected",
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
      "datasource": "Prometheus",
      "id": 1,
      "targets": [{"expr": "feature_equity_redis_connected", "refId": "A", "legendFormat": "Connected"}],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {"mode": "absolute", "steps": [{"color": "red", "value": null}, {"color": "green", "value": 1}]}
        }
      }
    },
    {
      "type": "stat",
      "title": "Ticks Read (5m)",
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
      "datasource": "Prometheus",
      "id": 2,
      "targets": [{"expr": "increase(feature_equity_read_total[5m])", "refId": "A", "legendFormat": "Ticks"}]
    },
    {
      "type": "stat",
      "title": "Snapshots Published (5m)",
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
      "datasource": "Prometheus",
      "id": 3,
      "targets": [{"expr": "increase(feature_equity_publish_total[5m])", "refId": "A", "legendFormat": "Published"}]
    },
    {
      "type": "stat",
      "title": "Errors (5m)",
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
      "datasource": "Prometheus",
      "id": 4,
      "targets": [{"expr": "increase(feature_equity_errors_total[5m])", "refId": "A", "legendFormat": "Errors"}]
    },
    {
      "type": "timeseries",
      "title": "Ticks Read/sec",
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 8},
      "datasource": "Prometheus",
      "id": 5,
      "targets": [{"expr": "rate(feature_equity_read_total[1m])", "refId": "A", "legendFormat": "Read/sec"}]
    },
    {
      "type": "timeseries",
      "title": "Snapshots Published/sec",
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 8},
      "datasource": "Prometheus",
      "id": 6,
      "targets": [{"expr": "rate(feature_equity_publish_total[1m])", "refId": "A", "legendFormat": "Published/sec"}]
    },
    {
      "type": "timeseries",
      "title": "Errors/sec",
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 8},
      "datasource": "Prometheus",
      "id": 7,
      "targets": [{"expr": "rate(feature_equity_errors_total[1m])", "refId": "A", "legendFormat": "Errors/sec"}]
    },
    {
      "type": "timeseries",
      "title": "Processing Latency p95 (seconds)",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "datasource": "Prometheus",
      "id": 8,
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(feature_equity_process_duration_seconds_bucket[5m])) by (le))",
          "refId": "A",
          "legendFormat": "p95"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency Distribution (p50/p95/p99)",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "datasource": "Prometheus",
      "id": 9,
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(feature_equity_process_duration_seconds_bucket[5m])) by (le))",
          "refId": "A",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(feature_equity_process_duration_seconds_bucket[5m])) by (le))",
          "refId": "B",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(feature_equity_process_duration_seconds_bucket[5m])) by (le))",
          "refId": "C",
          "legendFormat": "p99"
        }
      ]
    }
  ],
  "time": {"from": "now-1h", "to": "now"}
}
